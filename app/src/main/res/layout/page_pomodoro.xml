<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/sessionCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/hind_vadodara_semi_bold"
        android:text="Ilość sesji"
        android:textColor="@color/eventColor"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sessionCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@null"
        android:fontFamily="@font/hind_vadodara_regular"
        android:text="1"
        android:maxLength="3"
        android:paddingEnd="16dp"
        android:textAlignment="textEnd"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/ltGray"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sessionCountLabel"
        app:layout_constraintTop_toTopOf="@id/sessionCountLabel"
        app:layout_constraintBottom_toBottomOf="@id/sessionCountLabel"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/sep1"
        app:layout_constraintTop_toBottomOf="@id/sessionCountLabel"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:background="#33FFFFFF"/>

    <TextView
        android:id="@+id/sessionLengthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/hind_vadodara_semi_bold"
        android:text="Długość sesji"
        android:textColor="@color/eventColor"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sep1" />

    <EditText
        android:id="@+id/sessionLength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@null"
        android:fontFamily="@font/hind_vadodara_regular"
        android:text="1"
        android:maxLength="3"
        android:paddingEnd="8dp"
        android:textAlignment="textEnd"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/ltGray"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/sessionLengthMetric"
        app:layout_constraintStart_toEndOf="@id/sessionLengthLabel"
        app:layout_constraintTop_toTopOf="@id/sessionLengthLabel"
        app:layout_constraintBottom_toBottomOf="@id/sessionLengthLabel"/>

    <TextView
        android:id="@+id/sessionLengthMetric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/hind_vadodara_regular"
        android:text="min"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sessionLengthLabel"
        app:layout_constraintBottom_toBottomOf="@id/sessionLengthLabel"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/sep2"
        app:layout_constraintTop_toBottomOf="@id/sessionLengthLabel"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:background="#33FFFFFF"/>


    <TextView
        android:id="@+id/sessionBreakLengthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/hind_vadodara_semi_bold"
        android:text="Długość przerw"
        android:textColor="@color/eventColor"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sep2" />

    <EditText
        android:id="@+id/sessionBreakLength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@null"
        android:fontFamily="@font/hind_vadodara_regular"
        android:text="1"
        android:maxLength="3"
        android:paddingEnd="8dp"
        android:textAlignment="textEnd"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/ltGray"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@id/sessionBreakLengthMetric"
        app:layout_constraintStart_toEndOf="@id/sessionBreakLengthLabel"
        app:layout_constraintTop_toTopOf="@id/sessionBreakLengthLabel"
        app:layout_constraintBottom_toBottomOf="@id/sessionBreakLengthLabel"/>

    <TextView
        android:id="@+id/sessionBreakLengthMetric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/hind_vadodara_regular"
        android:text="min"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sessionBreakLengthLabel"
        app:layout_constraintBottom_toBottomOf="@id/sessionBreakLengthLabel" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/sep3"
        app:layout_constraintTop_toBottomOf="@id/sessionBreakLengthLabel"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:background="#33FFFFFF"/>
    <Button
        android:id="@+id/startSession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="START"
        android:fontFamily="@font/hind_vadodara_semi_bold"
        android:textColor="@color/white"
        android:background="@drawable/all_rounded_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>