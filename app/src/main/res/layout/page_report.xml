<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.MainActivity"
    android:background="@color/backgroundColor"
    android:padding="16dp">

    <ImageView
        android:id="@+id/weightIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_weight"
        android:tint="@color/eventColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/weightReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Raport wagi"
        android:textSize="20sp"
        android:textColor="@color/eventColor"
        android:fontFamily="@font/hind_vadodara_semi_bold"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/weightIcon"
        app:layout_constraintTop_toTopOf="@id/weightIcon"
        app:layout_constraintStart_toEndOf="@id/weightIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/weightValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/weightReport"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/hind_vadodara_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/weightIcon"
        app:layout_constraintStart_toEndOf="@id/weightIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/pomodoroIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_pomodoro"
        android:tint="@color/eventColor"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/weightValue"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pomodoroReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Raport pomodoro"
        android:textSize="20sp"
        android:textColor="@color/eventColor"
        android:fontFamily="@font/hind_vadodara_semi_bold"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/pomodoroIcon"
        app:layout_constraintTop_toTopOf="@id/pomodoroIcon"
        app:layout_constraintStart_toEndOf="@id/pomodoroIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/pomodoroValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/pomodoroReport"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/hind_vadodara_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/pomodoroIcon"
        app:layout_constraintStart_toEndOf="@id/pomodoroIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/trainingIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_training"
        android:tint="@color/eventColor"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/pomodoroValue"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/trainingReport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Raport treningÃ³w"
        android:textSize="20sp"
        android:textColor="@color/eventColor"
        android:fontFamily="@font/hind_vadodara_semi_bold"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/trainingIcon"
        app:layout_constraintTop_toTopOf="@id/trainingIcon"
        app:layout_constraintStart_toEndOf="@id/trainingIcon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/trainingValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/trainingReport"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/hind_vadodara_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/trainingIcon"
        app:layout_constraintStart_toEndOf="@id/trainingIcon"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>