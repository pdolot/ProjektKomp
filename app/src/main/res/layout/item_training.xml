<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="@drawable/all_rounded_background"
    android:backgroundTint="#4C1A1A1A">

    <TextView
        android:id="@+id/trainingName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/hind_vadodara_medium"
        tools:text="Trening z dnia: 06.09.2020 17:40"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/remove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/remove"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_add"
        android:layout_margin="16dp"
        android:rotation="45"
        android:tint="#F44336"/>

    <TextView
        android:id="@+id/startLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/hind_vadodara_semi_bold"
        android:text="Zacznij trening"
        android:includeFontPadding="false"
        android:textColor="@color/positiveColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/start"
        app:layout_constraintBottom_toBottomOf="@id/start"
        app:layout_constraintTop_toTopOf="@id/start" />

    <ImageView
        android:id="@+id/start"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remove"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_arrow"
        android:layout_margin="16dp"
        android:rotation="180"
        android:tint="@color/positiveColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>